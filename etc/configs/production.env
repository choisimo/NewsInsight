# Production Environment Configuration
# These values will be loaded into Consul KV under config/{service-name}/
# 
# IMPORTANT: Replace all placeholder values with actual production credentials!
# DO NOT commit production secrets to version control!

# =============================================================================
# API Gateway Configuration (config/api-gateway/)
# =============================================================================
API_GATEWAY_PORT=8000
API_GATEWAY_DEBUG=false
API_GATEWAY_LOG_LEVEL=WARNING
API_GATEWAY_ENVIRONMENT=production

# Service URLs (use actual internal DNS or service mesh addresses)
API_GATEWAY_ANALYSIS_SERVICE_URL=http://analysis-service:8001
API_GATEWAY_COLLECTOR_SERVICE_URL=http://collector-service:8002

# Timeouts (seconds)
API_GATEWAY_REQUEST_TIMEOUT=30
API_GATEWAY_CONNECT_TIMEOUT=10

# Rate Limiting
API_GATEWAY_RATE_LIMIT_ENABLED=true
API_GATEWAY_RATE_LIMIT_PER_MINUTE=500

# JWT Settings (REPLACE WITH SECURE PRODUCTION VALUES)
API_GATEWAY_JWT_SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS
API_GATEWAY_JWT_ALGORITHM=HS256
API_GATEWAY_JWT_EXPIRATION_MINUTES=60

# CORS Settings (restrict to your actual production domains)
API_GATEWAY_CORS_ORIGINS=https://app.example.com,https://www.example.com
API_GATEWAY_CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Analysis Service Configuration (config/analysis-service/)
# =============================================================================
ANALYSIS_SERVICE_PORT=8001
ANALYSIS_SERVICE_DEBUG=false
ANALYSIS_SERVICE_LOG_LEVEL=WARNING
ANALYSIS_SERVICE_ENVIRONMENT=production

# Database (REPLACE WITH ACTUAL PRODUCTION DATABASE)
ANALYSIS_SERVICE_DATABASE_URL=postgresql://username:password@prod-db-host:5432/pension_analysis_prod
ANALYSIS_SERVICE_REDIS_URL=redis://prod-redis-host:6379/1

# Security (REPLACE WITH SECURE PRODUCTION VALUES)
ANALYSIS_SERVICE_SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS
ANALYSIS_SERVICE_ALLOWED_HOSTS=app.example.com,analysis-service.internal

# Service URLs
ANALYSIS_SERVICE_API_GATEWAY_URL=http://api-gateway:8000
ANALYSIS_SERVICE_COLLECTOR_SERVICE_URL=http://collector-service:8002

# ML Model Settings
ANALYSIS_SERVICE_ML_MODEL_PATH=/app/models/sentiment_model
ANALYSIS_SERVICE_CACHE_TTL=1800

# =============================================================================
# Collector Service Configuration (config/collector-service/)
# =============================================================================
COLLECTOR_SERVICE_PORT=8002
COLLECTOR_SERVICE_DEBUG=false
COLLECTOR_SERVICE_LOG_LEVEL=WARNING
COLLECTOR_SERVICE_ENVIRONMENT=production

# Database (REPLACE WITH ACTUAL PRODUCTION DATABASE)
COLLECTOR_SERVICE_DATABASE_URL=postgresql://username:password@prod-db-host:5432/pension_collector_prod
COLLECTOR_SERVICE_REDIS_URL=redis://prod-redis-host:6379/2

# Service URLs
COLLECTOR_SERVICE_ANALYSIS_SERVICE_URL=http://analysis-service:8001

# Collection Settings
COLLECTOR_SERVICE_MAX_CONCURRENT_REQUESTS=50
COLLECTOR_SERVICE_REQUEST_TIMEOUT=30
COLLECTOR_SERVICE_COLLECTION_INTERVAL=3600

# Scraping Settings (REPLACE WITH ACTUAL PRODUCTION VALUES)
COLLECTOR_SERVICE_USER_AGENT=Mozilla/5.0 (compatible; PensionSentimentBot/1.0; +https://www.example.com/bot)
COLLECTOR_SERVICE_RSS_FEEDS=https://source1.com/rss,https://source2.com/rss,https://source3.com/rss
COLLECTOR_SERVICE_SCRAPING_TARGETS=https://source1.com/news,https://source2.com/articles

# QA Pipeline Settings
COLLECTOR_SERVICE_QA_ENABLE_NETWORK_CHECKS=true
COLLECTOR_SERVICE_QA_DOMAIN_WHITELIST=source1.com,source2.com,source3.com,trusted-news.com
COLLECTOR_SERVICE_QA_MIN_CONTENT_LENGTH=200

# Crawl4AI integration
COLLECTOR_SERVICE_CRAWLER_ENABLED=false
COLLECTOR_SERVICE_CRAWLER_BASE_URL=http://web-crawler:11235

# =============================================================================
# Web Crawler Configuration (config/web-crawler/)
# =============================================================================
WEB_CRAWLER_PORT=5000
WEB_CRAWLER_LISTEN_HOST=0.0.0.0
WEB_CRAWLER_LOG_LEVEL=WARNING
WEB_CRAWLER_ENVIRONMENT=production
