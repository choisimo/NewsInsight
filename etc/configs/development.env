# Development Environment Configuration
# These values will be loaded into Consul KV under config/{service-name}/

# =============================================================================
# API Gateway Configuration (config/api-gateway/)
# =============================================================================
API_GATEWAY_PORT=8000
API_GATEWAY_DEBUG=true
API_GATEWAY_LOG_LEVEL=DEBUG
API_GATEWAY_ENVIRONMENT=development

# Service URLs
API_GATEWAY_ANALYSIS_SERVICE_URL=http://analysis-service:8001
API_GATEWAY_COLLECTOR_SERVICE_URL=http://collector-service:8002

# Timeouts (seconds)
API_GATEWAY_REQUEST_TIMEOUT=30
API_GATEWAY_CONNECT_TIMEOUT=10
API_GATEWAY_DEFAULT_TIMEOUT=30
API_GATEWAY_HEALTH_CHECK_TIMEOUT=5

# Rate Limiting
API_GATEWAY_RATE_LIMIT_ENABLED=true
API_GATEWAY_RATE_LIMIT_PER_MINUTE=100

# JWT Settings
API_GATEWAY_JWT_SECRET_KEY=dev-secret-key-change-in-production
API_GATEWAY_JWT_ALGORITHM=HS256
API_GATEWAY_JWT_EXPIRATION_MINUTES=60
API_GATEWAY_JWT_EXPIRATION_HOURS=24

# CORS Settings
API_GATEWAY_CORS_ORIGINS=*
API_GATEWAY_CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Analysis Service Configuration (config/analysis-service/)
# =============================================================================
ANALYSIS_SERVICE_PORT=8001
ANALYSIS_SERVICE_DEBUG=true
ANALYSIS_SERVICE_LOG_LEVEL=DEBUG
ANALYSIS_SERVICE_ENVIRONMENT=development

# Database
ANALYSIS_SERVICE_DATABASE_URL=postgresql://postgres:password@postgres:5432/pension_analysis
ANALYSIS_SERVICE_REDIS_URL=redis://redis:6379/1

# Security
ANALYSIS_SERVICE_SECRET_KEY=dev-analysis-secret-change-in-production
ANALYSIS_SERVICE_ALLOWED_HOSTS=*

# Service URLs
ANALYSIS_SERVICE_API_GATEWAY_URL=http://api-gateway:8000
ANALYSIS_SERVICE_COLLECTOR_SERVICE_URL=http://collector-service:8002

# ML Model Settings
ANALYSIS_SERVICE_ML_MODEL_PATH=/app/models/sentiment_model
ANALYSIS_SERVICE_CACHE_TTL=300

# =============================================================================
# Collector Service Configuration (config/collector-service/)
# =============================================================================
COLLECTOR_SERVICE_PORT=8002
COLLECTOR_SERVICE_DEBUG=true
COLLECTOR_SERVICE_LOG_LEVEL=DEBUG
COLLECTOR_SERVICE_ENVIRONMENT=development

# Database
COLLECTOR_SERVICE_DATABASE_URL=postgresql://postgres:password@postgres:5432/pension_collector
COLLECTOR_SERVICE_REDIS_URL=redis://redis:6379/2

# Service URLs
COLLECTOR_SERVICE_ANALYSIS_SERVICE_URL=http://analysis-service:8001

# Collection Settings
COLLECTOR_SERVICE_MAX_CONCURRENT_REQUESTS=10
COLLECTOR_SERVICE_REQUEST_TIMEOUT=30
COLLECTOR_SERVICE_COLLECTION_INTERVAL=3600

# Scraping Settings
COLLECTOR_SERVICE_USER_AGENT=Mozilla/5.0 (compatible; PensionSentimentBot/1.0)
COLLECTOR_SERVICE_RSS_FEEDS=https://example.com/rss1,https://example.com/rss2
COLLECTOR_SERVICE_SCRAPING_TARGETS=https://example.com/news,https://example.com/articles

# QA Pipeline Settings
COLLECTOR_SERVICE_QA_ENABLE_NETWORK_CHECKS=false
COLLECTOR_SERVICE_QA_DOMAIN_WHITELIST=example.com,news.example.com
COLLECTOR_SERVICE_QA_MIN_CONTENT_LENGTH=100

# Crawl4AI integration
COLLECTOR_SERVICE_CRAWLER_ENABLED=true
COLLECTOR_SERVICE_CRAWLER_BASE_URL=http://web-crawler:11235

# =============================================================================
# Web Crawler Configuration (config/web-crawler/)
# =============================================================================
WEB_CRAWLER_PORT=5000
WEB_CRAWLER_LISTEN_HOST=0.0.0.0
WEB_CRAWLER_LOG_LEVEL=DEBUG
WEB_CRAWLER_ENVIRONMENT=development
