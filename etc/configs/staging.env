# Staging Environment Configuration
# These values will be loaded into Consul KV under config/{service-name}/

# =============================================================================
# API Gateway Configuration (config/api-gateway/)
# =============================================================================
API_GATEWAY_PORT=8000
API_GATEWAY_DEBUG=false
API_GATEWAY_LOG_LEVEL=INFO
API_GATEWAY_ENVIRONMENT=staging

# Service URLs
API_GATEWAY_ANALYSIS_SERVICE_URL=http://analysis-service:8001
API_GATEWAY_COLLECTOR_SERVICE_URL=http://collector-service:8002

# Timeouts (seconds)
API_GATEWAY_REQUEST_TIMEOUT=30
API_GATEWAY_CONNECT_TIMEOUT=10

# Rate Limiting
API_GATEWAY_RATE_LIMIT_ENABLED=true
API_GATEWAY_RATE_LIMIT_PER_MINUTE=200

# JWT Settings (CHANGE THESE IN PRODUCTION)
API_GATEWAY_JWT_SECRET_KEY=staging-secret-key-replace-me
API_GATEWAY_JWT_ALGORITHM=HS256
API_GATEWAY_JWT_EXPIRATION_MINUTES=60

# CORS Settings
API_GATEWAY_CORS_ORIGINS=https://staging.example.com
API_GATEWAY_CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Analysis Service Configuration (config/analysis-service/)
# =============================================================================
ANALYSIS_SERVICE_PORT=8001
ANALYSIS_SERVICE_DEBUG=false
ANALYSIS_SERVICE_LOG_LEVEL=INFO
ANALYSIS_SERVICE_ENVIRONMENT=staging

# Database (REPLACE WITH ACTUAL VALUES)
ANALYSIS_SERVICE_DATABASE_URL=postgresql://postgres:password@postgres:5432/pension_analysis_staging
ANALYSIS_SERVICE_REDIS_URL=redis://redis:6379/1

# Security (CHANGE IN PRODUCTION)
ANALYSIS_SERVICE_SECRET_KEY=staging-analysis-secret-replace-me
ANALYSIS_SERVICE_ALLOWED_HOSTS=staging.example.com,analysis-service

# Service URLs
ANALYSIS_SERVICE_API_GATEWAY_URL=http://api-gateway:8000
ANALYSIS_SERVICE_COLLECTOR_SERVICE_URL=http://collector-service:8002

# ML Model Settings
ANALYSIS_SERVICE_ML_MODEL_PATH=/app/models/sentiment_model
ANALYSIS_SERVICE_CACHE_TTL=600

# =============================================================================
# Collector Service Configuration (config/collector-service/)
# =============================================================================
COLLECTOR_SERVICE_PORT=8002
COLLECTOR_SERVICE_DEBUG=false
COLLECTOR_SERVICE_LOG_LEVEL=INFO
COLLECTOR_SERVICE_ENVIRONMENT=staging

# Database (REPLACE WITH ACTUAL VALUES)
COLLECTOR_SERVICE_DATABASE_URL=postgresql://postgres:password@postgres:5432/pension_collector_staging
COLLECTOR_SERVICE_REDIS_URL=redis://redis:6379/2

# Service URLs
COLLECTOR_SERVICE_ANALYSIS_SERVICE_URL=http://analysis-service:8001

# Collection Settings
COLLECTOR_SERVICE_MAX_CONCURRENT_REQUESTS=20
COLLECTOR_SERVICE_REQUEST_TIMEOUT=30
COLLECTOR_SERVICE_COLLECTION_INTERVAL=1800

# Scraping Settings
COLLECTOR_SERVICE_USER_AGENT=Mozilla/5.0 (compatible; PensionSentimentBot/1.0; +https://staging.example.com)
COLLECTOR_SERVICE_RSS_FEEDS=https://example.com/rss1,https://example.com/rss2
COLLECTOR_SERVICE_SCRAPING_TARGETS=https://example.com/news,https://example.com/articles

# QA Pipeline Settings
COLLECTOR_SERVICE_QA_ENABLE_NETWORK_CHECKS=true
COLLECTOR_SERVICE_QA_DOMAIN_WHITELIST=example.com,news.example.com,trusted-source.com
COLLECTOR_SERVICE_QA_MIN_CONTENT_LENGTH=150

# Crawl4AI integration
COLLECTOR_SERVICE_CRAWLER_ENABLED=true
COLLECTOR_SERVICE_CRAWLER_BASE_URL=http://web-crawler:11235

# =============================================================================
# Web Crawler Configuration (config/web-crawler/)
# =============================================================================
WEB_CRAWLER_PORT=5000
WEB_CRAWLER_LISTEN_HOST=0.0.0.0
WEB_CRAWLER_LOG_LEVEL=INFO
WEB_CRAWLER_ENVIRONMENT=staging
