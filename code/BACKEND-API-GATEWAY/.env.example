# API Gateway 환경 변수 설정

# 서버 설정
PORT=8000
DEBUG=true

# 마이크로서비스 URL 설정
ANALYSIS_SERVICE_URL=http://localhost:8001
COLLECTOR_SERVICE_URL=http://localhost:8002
ABSA_SERVICE_URL=http://localhost:8003
ALERT_SERVICE_URL=http://localhost:8004

# 요청 타임아웃 설정 (초)
DEFAULT_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=5

# Rate Limiting 설정
RATE_LIMIT_PER_MINUTE=100

# JWT 인증 설정 (선택사항)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS 설정
ALLOWED_ORIGINS=*
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# 로깅 설정
LOG_LEVEL=INFO
ENVIRONMENT=development